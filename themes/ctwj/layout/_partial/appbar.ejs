<section class="appbar">
    <%
        let backUrl = '/';
        if (is_post() && page.categories) {
            backUrl = `/categories/${page.categories.data[page.categories.data.length-1].slug}/`;
        }
        if (is_category() && page.categories) {
            backUrl = `/categories/${page.categories.data[0].slug}/`;
        }
    %>
    <div class="leading center">
        <a href="<%= backUrl %>" >
            <span class="iconfont">&#xe603;</span>
        </a> 
    </div>
    <div class="appbar-title center"> 
        <% page.path %>
        <% if (is_show_appbar_nav(page.path)) { %>
        <nav class="nav-appbar">
            <div class="nav-item center 
            <% if (is_appbar_nav_active(page.path, 'house/')) { %>
                active
            <% } %>">
            <a href="/categories/house/">
                <span>新房</span>
            </a>
            </div>
            <div class="nav-item center 
            <% if (is_appbar_nav_active(page.path, 'resold-house')) { %>
                active
            <% } %>">
            <a href="/categories/resold-house/">
                <span>二手房</span>
            </a>
            </div>
        </nav>
        <% } else if (is_category()) { %>
            <div class="appbar-title center"> 
                <span class="appbar-title-text"><%= page.category %></span>
            </div>
        <% } else if (is_post() || is_page()) { %>
            <div class="appbar-title center"> 
                <span class="appbar-title-text"><%= page.title %></span>
            </div>
        <% } else if (is_home()) { %>
            <div class="appbar-title center"> 
                <span class="appbar-title-text">购房宝典</span>
            </div>
        <% }%>
    </div>
    <div class="right center">
        <!-- <span class="iconfont">&#xe612;</span> -->
    </div>
</section>